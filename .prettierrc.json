{
    "arrowParens": "always",
    "bracketSpacing": true,
    "importOrder": [
        "^react(.*)$",
        "^lodash/(.*)$",
        "^@lumx/(.*)$",
        "^lumapps(.*)$",
        "^@dev-portal/(.*)$",
        "./app/store(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false
}
